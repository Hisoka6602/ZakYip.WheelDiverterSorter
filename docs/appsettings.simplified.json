{
  // ==========================================
  // 基础设施配置（仅保留必要的基础配置）
  // Infrastructure Configuration (Only essential configs)
  // ==========================================

  // 日志配置 - Logging Configuration
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "RetentionDays": 3  // 日志保留天数 - Log retention in days
  },

  // 路由数据库配置 - Route Database Configuration
  "RouteConfiguration": {
    "DatabasePath": "Data/routes.db"  // 路由配置数据库文件路径 - Route configuration database path
  },

  // 日志清理配置 - Log Cleanup Configuration
  "LogCleanup": {
    "LogDirectory": "logs",
    "RetentionDays": 14,
    "MaxTotalSizeMb": 1024,
    "CleanupIntervalHours": 24
  }

  // ==========================================
  // 业务配置（通过 API 端点管理）
  // Business Configuration (Managed via API endpoints)
  // ==========================================
  
  // 以下配置必须通过 API 端点管理，不允许在此配置：
  // The following configurations MUST be managed via API endpoints:
  
  // ❌ Driver - 驱动配置
  //    ✅ API: GET/PUT /api/config/driver
  
  // ❌ Sensor - 传感器配置  
  //    ✅ API: GET/PUT /api/config/sensors
  
  // ❌ RuleEngineConnection - 规则引擎通信配置
  //    ✅ API: GET/PUT /api/config/communication
  
  // ❌ Concurrency - 并发控制配置
  //    ✅ API: GET/PUT /api/config/system
  
  // ❌ Performance - 性能优化配置
  //    ✅ API: GET/PUT /api/config/system
  
  // ❌ MiddleConveyorIo - 中段皮带IO联动配置
  //    ✅ API: GET/PUT /api/config/io-linkage
  
  // ❌ Simulation - 仿真配置
  //    ✅ API: GET/PUT /api/config/simulation
  
  // ❌ TopologyConfiguration - 拓扑配置
  //    ✅ API: GET/PUT /api/config/topology (或通过路由配置管理)
  
  // ❌ Routes - 路由配置
  //    ✅ API: GET/POST/PUT/DELETE /api/config/routes
  //    ✅ API: GET /api/config/routes/export (文件导出)
  //    ✅ API: POST /api/config/routes/import (文件导入)
  
  // ❌ Panel - 面板配置
  //    ✅ API: GET/PUT /api/config/panel
}
