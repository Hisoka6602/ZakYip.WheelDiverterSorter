{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "ZakYip.WheelDiverterSorter.Communication": "Debug"
    }
  },
  "RouteConfiguration": {
    "DatabasePath": "Data/routes.db"
  },
  "Driver": {
    "UseHardwareDriver": false,
    "Leadshine": {
      "CardNo": 0,
      "Diverters": []
    }
  },
  "Sensor": {
    "UseHardwareSensor": false,
    "VendorType": "Mock",
    "MockSensors": [
      {
        "SensorId": "SENSOR_PE_01",
        "Type": "Photoelectric",
        "IsEnabled": true
      }
    ]
  },
  "RuleEngineConnection": {
    "Mode": "Http",
    "HttpApi": "http://localhost:5000/api/sorting/chute",
    "TimeoutMs": 10000,
    "RetryCount": 3,
    "RetryDelayMs": 1000,
    "EnableAutoReconnect": true,
    "Http": {
      "MaxConnectionsPerServer": 10,
      "PooledConnectionIdleTimeout": 60,
      "PooledConnectionLifetime": 0,
      "UseHttp2": false
    }
  }
}
