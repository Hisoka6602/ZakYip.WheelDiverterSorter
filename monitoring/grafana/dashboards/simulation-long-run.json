{
  "dashboard": {
    "title": "Simulation Long-Run Monitoring",
    "tags": ["simulation", "long-run", "quality"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "❌ 错分计数 (应为 0) / Mis-Sort Count (Should be 0)",
        "type": "stat",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "simulation_mis_sort_total",
            "legendFormat": "错分总数"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 1, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "包裹状态分布 / Parcel Status Distribution",
        "type": "piechart",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "simulation_parcel_total",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "成功分拣率 / Success Sort Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "rate(simulation_parcel_total{status=\"SortedToTargetChute\"}[1m]) * 60",
            "legendFormat": "成功分拣（包裹/分钟）"
          }
        ]
      },
      {
        "id": 4,
        "title": "超时和掉包趋势 / Timeout & Dropped Trends",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "rate(simulation_parcel_total{status=\"Timeout\"}[1m]) * 60",
            "legendFormat": "超时（包裹/分钟）"
          },
          {
            "expr": "rate(simulation_parcel_total{status=\"Dropped\"}[1m]) * 60",
            "legendFormat": "掉包（包裹/分钟）"
          },
          {
            "expr": "rate(simulation_parcel_total{status=\"ExecutionError\"}[1m]) * 60",
            "legendFormat": "执行错误（包裹/分钟）"
          }
        ]
      },
      {
        "id": 5,
        "title": "行程时间分布 (P50/P95/P99) / Travel Time Distribution",
        "type": "graph",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(simulation_travel_time_seconds_bucket[5m]))",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(simulation_travel_time_seconds_bucket[5m]))",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(simulation_travel_time_seconds_bucket[5m]))",
            "legendFormat": "P99"
          },
          {
            "expr": "rate(simulation_travel_time_seconds_sum[5m]) / rate(simulation_travel_time_seconds_count[5m])",
            "legendFormat": "平均值"
          }
        ]
      },
      {
        "id": 6,
        "title": "行程时间热力图 / Travel Time Heatmap",
        "type": "heatmap",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 },
        "targets": [
          {
            "expr": "increase(simulation_travel_time_seconds_bucket[1m])",
            "legendFormat": "{{le}}"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s"
  }
}
