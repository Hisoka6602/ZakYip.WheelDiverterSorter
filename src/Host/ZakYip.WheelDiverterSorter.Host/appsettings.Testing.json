{
  // ==========================================
  // Test Environment Configuration
  // This file is loaded when ASPNETCORE_ENVIRONMENT=Testing
  // ==========================================

  // Minimal valid configuration for integration tests
  // These values will be overridden by mock services in tests

  // Test environment marker
  "IsTestEnvironment": true,

  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // RuleEngine communication - minimal valid config for tests
  "RuleEngineConnection": {
    "Mode": "Http",
    "HttpApi": "http://localhost:9999/test-rule-engine",
    "TimeoutMs": 5000
  },

  // Route database for tests
  "RouteConfiguration": {
    "DatabasePath": "Data/routes_test.db"
  },

  // Driver configuration for tests (simulation mode)
  "Driver": {
    "UseHardwareDriver": false,
    "VendorId": "Simulated"
  },

  // Simulation mode enabled
  "IsSimulationMode": true
}
