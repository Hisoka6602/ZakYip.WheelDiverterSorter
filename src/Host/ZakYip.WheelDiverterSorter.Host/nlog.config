<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/internal-nlog.txt">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- 
    日志文件分类说明（对应 /api/config/logging API 的配置分类）:
    
    1. error-{date}.log          - 异常日志（始终输出，不受开关控制）
    2. parcel-lifecycle-{date}.log - 包裹生命周期日志 (EnableParcelLifecycleLog)
    3. parcel-trace-{date}.log   - 包裹追踪日志 (EnableParcelTraceLog)
    4. path-execution-{date}.log - 路径执行日志 (EnablePathExecutionLog)
    5. communication-{date}.log  - 通信日志 (EnableCommunicationLog)
    6. driver-{date}.log         - 硬件驱动日志 (EnableDriverLog)
    7. performance-{date}.log    - 性能监控日志 (EnablePerformanceLog)
    8. alarm-{date}.log          - 告警日志 (EnableAlarmLog)
    9. debug-{date}.log          - 调试日志 (EnableDebugLog)
    10. config-audit-{date}.log  - 配置审计日志（始终输出，记录所有配置修改）
    11. all-{date}.log           - 汇总日志（所有日志的备份）
  -->

  <!-- the targets to write to -->
  <targets>
    <!-- ========== 异常日志（始终输出，不受开关控制） ========== -->
    <target xsi:type="File" name="errorfile" fileName="logs/error-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring,Data:MaxInnerExceptionLevel=10}"
            archiveFileName="logs/archives/error-{#}.log"
            archiveEvery="Day"
            archiveNumbering="DateAndSequence"
            maxArchiveFiles="30" />

    <!-- ========== 包裹生命周期日志 (EnableParcelLifecycleLog) ========== -->
    <target xsi:type="File" name="parcellifecyclefile" fileName="logs/parcel-lifecycle-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${message}" 
            archiveFileName="logs/archives/parcel-lifecycle-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="30" />

    <!-- ========== 包裹追踪日志 (EnableParcelTraceLog) ========== -->
    <target xsi:type="File" name="parceltracefile" fileName="logs/parcel-trace-${shortdate}.log"
            layout="${message}"
            archiveFileName="logs/archives/parcel-trace-{#}.log"
            archiveEvery="Day"
            archiveNumbering="DateAndSequence"
            maxArchiveFiles="14" />

    <!-- ========== 路径执行日志 (EnablePathExecutionLog) ========== -->
    <target xsi:type="File" name="pathexecutionfile" fileName="logs/path-execution-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="logs/archives/path-execution-{#}.log"
            archiveEvery="Day"
            archiveNumbering="DateAndSequence"
            maxArchiveFiles="14" />

    <!-- ========== 通信日志 (EnableCommunicationLog) ========== -->
    <target xsi:type="File" name="communicationfile" fileName="logs/communication-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="logs/archives/communication-{#}.log"
            archiveEvery="Day"
            archiveNumbering="DateAndSequence"
            maxArchiveFiles="14" />

    <!-- ========== 硬件驱动日志 (EnableDriverLog) ========== -->
    <target xsi:type="File" name="driverfile" fileName="logs/driver-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="logs/archives/driver-{#}.log"
            archiveEvery="Day"
            archiveNumbering="DateAndSequence"
            maxArchiveFiles="14" />

    <!-- ========== 性能监控日志 (EnablePerformanceLog) ========== -->
    <target xsi:type="File" name="performancefile" fileName="logs/performance-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}"
            archiveFileName="logs/archives/performance-{#}.log"
            archiveEvery="Day"
            archiveNumbering="DateAndSequence"
            maxArchiveFiles="14" />

    <!-- ========== 告警日志 (EnableAlarmLog) ========== -->
    <target xsi:type="File" name="alarmfile" fileName="logs/alarm-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="logs/archives/alarm-{#}.log"
            archiveEvery="Day"
            archiveNumbering="DateAndSequence"
            maxArchiveFiles="30" />

    <!-- ========== 调试日志 (EnableDebugLog) ========== -->
    <target xsi:type="File" name="debugfile" fileName="logs/debug-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="logs/archives/debug-{#}.log"
            archiveEvery="Day"
            archiveNumbering="DateAndSequence"
            maxArchiveFiles="7" />

    <!-- ========== 配置审计日志（始终输出，不受开关控制） ========== -->
    <target xsi:type="File" name="configauditfile" fileName="logs/config-audit-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}"
            archiveFileName="logs/archives/config-audit-{#}.log"
            archiveEvery="Day"
            archiveNumbering="DateAndSequence"
            maxArchiveFiles="90" />

    <!-- ========== 汇总日志（所有日志的备份） ========== -->
    <target xsi:type="File" name="allfile" fileName="logs/all-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />

    <!-- write to the void -->
    <target xsi:type="Null" name="blackhole" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!-- ========== 异常日志规则（最高优先级，始终输出） ========== -->
    <!-- 
      Error and Fatal logs go to error file (all namespaces)
      不使用 final，以便同时写入 errorfile 和 allfile（双重备份）
      这是有意设计：异常日志需要同时出现在专用错误日志和汇总日志中
    -->
    <logger name="*" minlevel="Error" writeTo="errorfile" />

    <!-- ========== 包裹追踪日志 ========== -->
    <logger name="ZakYip.WheelDiverterSorter.Observability.Tracing.FileBasedParcelTraceSink" minlevel="Trace" writeTo="parceltracefile" final="true" />
    
    <!-- ========== 包裹生命周期日志 ========== -->
    <logger name="ZakYip.WheelDiverterSorter.Observability.ParcelLifecycleLogger" minlevel="Trace" writeTo="parcellifecyclefile" final="true" />

    <!-- ========== 配置审计日志（始终输出，不受开关控制） ========== -->
    <logger name="ZakYip.WheelDiverterSorter.Observability.ConfigurationAudit.ConfigurationAuditLogger" minlevel="Trace" writeTo="configauditfile" final="true" />

    <!-- ========== 路径执行日志 ========== -->
    <logger name="ZakYip.WheelDiverterSorter.Execution.*" minlevel="Debug" writeTo="pathexecutionfile" />
    <logger name="ZakYip.WheelDiverterSorter.Core.Sorting.*" minlevel="Debug" writeTo="pathexecutionfile" />

    <!-- ========== 硬件驱动日志 ========== -->
    <logger name="ZakYip.WheelDiverterSorter.Drivers.*" minlevel="Debug" writeTo="driverfile" />
    <logger name="ZakYip.WheelDiverterSorter.Ingress.*" minlevel="Debug" writeTo="driverfile" />
    
    <!-- ========== 通信日志 ========== -->
    <logger name="ZakYip.WheelDiverterSorter.Communication.*" minlevel="Debug" writeTo="communicationfile" />

    <!-- ========== 性能监控日志 ========== -->
    <logger name="ZakYip.WheelDiverterSorter.Observability.Runtime.*" minlevel="Debug" writeTo="performancefile" />
    <logger name="ZakYip.WheelDiverterSorter.Host.Services.SorterMetrics" minlevel="Debug" writeTo="performancefile" />

    <!-- ========== 告警日志 ========== -->
    <logger name="ZakYip.WheelDiverterSorter.Observability.AlarmService" minlevel="Debug" writeTo="alarmfile" />
    <logger name="ZakYip.WheelDiverterSorter.Observability.AlertHistoryService" minlevel="Debug" writeTo="alarmfile" />
    <logger name="ZakYip.WheelDiverterSorter.Host.Services.AlarmMonitoringWorker" minlevel="Debug" writeTo="alarmfile" />

    <!-- ========== 调试日志 ========== -->
    <!-- 所有 Debug 级别日志写入调试日志文件 -->
    <logger name="ZakYip.WheelDiverterSorter.*" level="Debug" writeTo="debugfile" />

    <!-- Skip non-critical Microsoft logs and so on -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />

    <!-- ========== 汇总日志（备份所有日志） ========== -->
    <logger name="*" minlevel="Debug" writeTo="allfile" />
  </rules>
</nlog>
