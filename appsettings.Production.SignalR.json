{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "ZakYip.WheelDiverterSorter.Communication": "Information",
      "ZakYip.WheelDiverterSorter.Host.Services.ParcelSortingOrchestrator": "Information"
    }
  },
  "RouteConfiguration": {
    "DatabasePath": "Data/routes.db"
  },
  "Driver": {
    "UseHardwareDriver": true,
    "Leadshine": {
      "CardNo": 0,
      "Diverters": [
        {
          "DiverterId": "D1",
          "OutputStartBit": 0,
          "FeedbackInputBit": 10
        },
        {
          "DiverterId": "D2",
          "OutputStartBit": 2,
          "FeedbackInputBit": 11
        },
        {
          "DiverterId": "D3",
          "OutputStartBit": 4,
          "FeedbackInputBit": 12
        }
      ]
    }
  },
  "Sensor": {
    "UseHardwareSensor": true,
    "VendorType": "Leadshine",
    "Leadshine": {
      "CardNo": 0,
      "Sensors": [
        {
          "SensorId": "SENSOR_PE_01",
          "Type": "Photoelectric",
          "InputBit": 0,
          "IsEnabled": true
        },
        {
          "SensorId": "SENSOR_LASER_01",
          "Type": "Laser",
          "InputBit": 1,
          "IsEnabled": true
        }
      ]
    }
  },
  "RuleEngineConnection": {
    "Mode": "SignalR",
    "SignalRHub": "http://192.168.1.100:5000/sortingHub",
    "TimeoutMs": 5000,
    "RetryCount": 3,
    "RetryDelayMs": 1000,
    "EnableAutoReconnect": true
  }
}
